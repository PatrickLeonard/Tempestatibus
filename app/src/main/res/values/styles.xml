        <item name="android:background">@drawable/bg_gradient_summer</item>
    </style>

    <style name="SUMMER.DIALOG_THEME" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_gradient_summer</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:buttonBarButtonStyle">@style/SUMMER.CANCEL_BUTTON_STYLE</item>
        <item name="android:textAppearanceButton">@style/SUMMER.ALERT_DIALOG_BUTTON_TEXT_APPEARANCE</item>
    </style>

    <style name="SUMMER.ALERT_DIALOG_BUTTON_TEXT_APPEARANCE">
        <item name="android:textColor">@color/summer_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SUMMER.CANCEL_BUTTON_STYLE">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SUMMER.LIST_VIEW_STYLE" parent="android:Widget.DeviceDefault.ListView">
        <item name="android:background">@drawable/bg_gradient_summer</item>
    </style>

    <style name="SUMMER.TEXTVIEW_STYLE" parent="SUMMER">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SUMMER.BUTTON_STYLE" parent="android:Widget.DeviceDefault.Button">
        <item name="android:background">@color/button_background_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

