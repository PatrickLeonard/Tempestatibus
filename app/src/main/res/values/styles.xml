<resources>

    <style name="SUMMER" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient_summer</item>
        <item name="android:textViewStyle">@style/SUMMER.TEXTVIEW_STYLE</item>
        <item name="android:buttonStyle">@style/SUMMER.BUTTON_STYLE</item>
        <item name="android:listViewStyle">@style/SUMMER.LIST_VIEW_STYLE</item>
        <item name="android:alertDialogTheme">@style/SUMMER.DIALOG_THEME</item>
        <item name="android:progressBarStyle">@style/SUMMER.INDETERMINATE_PROGRESS_STYLE</item>
        <item name="android:radioButtonStyle">@style/SUMMER.RADIO_BUTTON_STYLE</item>
        <item name="android:editTextStyle">@style/SUMMER.EDIT_TEXT_STYLE</item>
    </style>

    <style name="SUMMER.EDIT_TEXT_STYLE" parent="SUMMER">
        <item name="android:textColor">@color/summer_text_color</item>
    </style>

    <style name="SUMMER.RADIO_BUTTON_STYLE" parent="Widget.AppCompat.CompoundButton.RadioButton">
